<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- ✅ Suite definition -->
<suite name="All Test Suite" verbose="1" preserve-order="true">

    <!-- ✅ Test block: Represents 1 set of tests, can include multiple classes -->
    <test name="OrangeHRM Parallel Test - Chrome">

        <!-- ✅ Parameter to pass browser name to the test class -->
        <parameter name="browser" value="chrome"/>

        <!-- ✅ Classes under this test -->
        <classes>
            <class name="org.example.Ex14_TestNG.Parameterization.Using_XMLFile.XML_ParallelTesting">
                <methods>
                    <include name="testLogo"/>
                    <include name="testTitle"/>
                    <include name="testURL"/>
                </methods>
            </class>
        </classes>

    </test>

    <!-- ✅ Test block: Represents 1 set of tests, can include multiple classes -->
